.right {
  height: 80px;
  margin-left: 20px;
}
.right .price {
  margin-top: 30px;
  display: flex;
  flex-direction: row;
  color: #1a1a1a;
  font-size: 44rpx;
  font-weight: 600;
}
.right .price text:nth-child(2) {
  color: #ababab;
  font-size: 33rpx;
  margin-left: 40rpx;
  font-weight: 300;
  margin-top: 10rpx;
}
.right .name {
  display: flex;
  flex-direction: row;
  font-size: 33rpx;
  margin: 30rpx 30rpx 5rpx 0;
  line-height: 60rpx;
}
.right .name .tag {
  margin-right: 30rpx;
}
.right .title {
  font-size: 33rpx;
  line-height: 60rpx;
  padding: 10rpx 0 15rpx 0;
}
.hot_goods {
  background: #eee;
  overflow: hidden;
}
.hot_goods .tit {
  height: 50px;
  line-height: 50px;
  font-size: 35rpx;
  text-align: center;
  background: #fff;
  margin: 6rpx 0;
  font-weight: 500;
}
.hos_list {
  margin-right: 13px;
  flex-wrap: wrap;
}
.hos_list .hos_item {
  background: #fff;
  width: 100%;
  border-radius: 10px;
  margin: 10rpx 0rpx 10rpx 10rpx;
  padding: 15rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
}
.hos_list .hos_item image {
  border-radius: 20rpx;
  width: 80px;
  height: 120px;
  display: block;
  margin-left: 10px;
}
.hos_list .hos_item .right1 {
  margin-left: 10px;
}
.hos_list .hos_item .right1 .price {
  display: flex;
  flex-direction: column;
  color: #1a1a1a;
  font-size: 36rpx;
  font-weight: 500;
}
.hos_list .hos_item .right1 .name {
  color: #1058D1;
  font-size: 28rpx;
  margin: 20rpx 0 5rpx 0;
  line-height: 50rpx;
}
.hos_list .hos_item .right1 .name text:nth-child(2) {
  color: #1a1a1a;
  font-size: 28rpx;
  margin-left: 30rpx;
}
.hos_list .hos_item .right1 .title {
  font-size: 28rpx;
  line-height: 30rpx;
  padding: 10rpx 0 15rpx 0;
  color: #7e7e7e;
}
.hos_list .hos_item .right1 .title .text-group {
  margin-top: 12rpx;
}

