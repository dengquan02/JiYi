.right {
  height: 80px;
  margin-left: 20px;
}
.right .price {
  margin-top: 30px;
  display: flex;
  flex-direction: row;
  color: #1a1a1a;
  font-size: 44rpx;
  font-weight: 600;
}
.right .price text:nth-child(2) {
  color: #ababab;
  font-size: 33rpx;
  margin-left: 40rpx;
  font-weight: 300;
  margin-top: 10rpx;
}
.right .name {
  display: flex;
  flex-direction: row;
  font-size: 33rpx;
  margin: 30rpx 30rpx 5rpx 0;
  line-height: 60rpx;
}
.right .name .tag {
  margin-right: 30rpx;
}
.right .title {
  font-size: 33rpx;
  line-height: 60rpx;
  padding: 10rpx 0 15rpx 0;
}
.hot_goods {
  background: #eee;
  overflow: hidden;
}
.hot_goods .tit {
  height: 50px;
  line-height: 50px;
  font-size: 35rpx;
  text-align: center;
  background: #fff;
  margin: 6rpx 0;
  font-weight: 500;
}
.uni-media-list {
  display: flex;
  flex-direction: row;
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.uni-media-list .uni-media-list-logo {
  width: 200rpx;
  height: 100rpx;
}
.uni-media-list .uni-media-list-logo .left-btn {
  border: 5rpx solid #1058D1;
  background-color: #eff4fc;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  position: absolute;
  right: 20px;
}
.uni-media-list .uni-media-list-body {
  flex-direction: row;
  height: auto;
  margin-left: 20rpx;
  margin-right: 20rpx;
  justify-content: space-around;
}
.uni-media-list .uni-media-list-text-top {
  height: 40rpx;
  font-size: 33rpx;
  overflow: hidden;
}
.uni-media-list .uni-media-list-text-bottom {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #1058D1;
}

