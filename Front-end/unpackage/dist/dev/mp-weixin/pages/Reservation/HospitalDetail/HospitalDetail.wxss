.right {
  height: 120px;
  margin-left: 20px;
}
.right .price {
  margin-top: 30px;
  display: flex;
  flex-direction: column;
  color: #1a1a1a;
  font-size: 44rpx;
  font-weight: 600;
}
.right .name {
  display: flex;
  flex-direction: row;
  font-size: 33rpx;
  margin: 20rpx 0 5rpx 0;
  line-height: 60rpx;
}
.right .name text:nth-child(2) {
  color: #ababab;
  font-size: 33rpx;
  margin-left: 30rpx;
}
.right .title {
  font-size: 33rpx;
  line-height: 60rpx;
  padding: 10rpx 0 15rpx 0;
}
.map {
  width: 100%;
  height: 450rpx;
}
.hot_goods {
  background: #eee;
  overflow: hidden;
}
.hot_goods .tit {
  height: 50px;
  line-height: 50px;
  font-size: 35rpx;
  text-align: center;
  background: #fff;
  margin: 6rpx 0;
  font-weight: 500;
}
.home swiper {
  width: 750rpx;
  height: 380rpx;
}
.home swiper image {
  height: 100%;
  width: 100%;
}
.list-box {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  font-size: 28rpx;
}
.list-box .left {
  width: 250rpx;
  background-color: #f6f6f6;
  line-height: 80rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  text-align: center;
}
.list-box .left .item {
  position: relative;
}
.list-box .left .item:not(:first-child) {
  margin-top: 1px;
}
.list-box .left .item:not(:first-child)::after {
  content: '';
  display: block;
  height: 0;
  border-top: #d6d6d6 solid 1px;
  width: 620rpx;
  position: absolute;
  top: -1px;
  right: 0;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
  /* 1px像素 */
}
.list-box .left .item.active, .list-box .left .item:active {
  color: #1058D1;
  background-color: #fff;
}
.list-box .main {
  background-color: #fff;
  padding-left: 10px;
  width: 0;
  flex-grow: 1;
  box-sizing: border-box;
  line-height: 30px;
}
.list-box .main .swiper {
  height: 500px;
}
.list-box .main .goods {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  align-content: center;
  margin-bottom: 10rpx;
}
.list-box .main .goods .describe {
  font-size: 30rpx;
  color: #7e7e7e;
}
.copyright {
  display: flex;
  justify-content: center;
  margin-top: 20px;
  margin-bottom: 20px;
  font-size: 30rpx;
  /* font-weight: 500; */
  color: #1a1a1a;
}

